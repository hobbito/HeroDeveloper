---
import Logo from "./Logo.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const currentYear = new Date().getFullYear();
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const footerLinks = [
  {
    title: t("nav.services"),
    links: [
      { name: t("home.services.web_dev.title"), url: "/services#web" },
      { name: t("home.services.mobile.title"), url: "/services#mobile" },
      { name: t("home.services.web.title"), url: "/services#custom" },
    ],
  },
  {
    title: t("nav.home"),
    links: [
      { name: t("nav.home"), url: "/" },
      { name: t("nav.about"), url: "/about" },
      { name: t("nav.services"), url: "/services" },
      { name: t("nav.contact"), url: "#contact" },
    ],
  },
];
---

<footer class="bg-slate-900 text-white">
  <div class="container mx-auto px-4">
    <!-- Main Footer Content -->
    <div class="py-12 grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand Section -->
      <div class="space-y-4">
        <Logo variant="dark" />
        <p class="text-slate-300">
          {t("home.hero.subtitle")}
        </p>
      </div>

      <!-- Footer Links -->
      {
        footerLinks.map((section) => (
          <div>
            <h3 class="text-lg font-semibold mb-4">{section.title}</h3>
            <ul class="space-y-2">
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.url}
                    class="text-slate-300 hover:text-blue-600 transition-colors"
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-slate-800 py-6 text-center text-slate-400">
      <p>Â© {currentYear} HeroDeveloper. {t("footer.rights")}</p>
    </div>
  </div>
</footer>
