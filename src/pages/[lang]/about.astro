<style>
  @keyframes blob1 {
    0%,
    100% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    33% {
      border-radius: 70% 60% 40% 30% / 30% 40% 70% 60%;
      transform: translate(5%, 5%) rotate(120deg) scale(1.1);
    }
    66% {
      border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%;
      transform: translate(-5%, -5%) rotate(240deg) scale(0.9);
    }
  }

  @keyframes blob2 {
    0%,
    100% {
      border-radius: 40% 60% 70% 30% / 50% 60% 30% 60%;
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    33% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
      transform: translate(-5%, 5%) rotate(-120deg) scale(0.9);
    }
    66% {
      border-radius: 50% 60% 40% 50% / 40% 50% 60% 50%;
      transform: translate(5%, -5%) rotate(-240deg) scale(1.1);
    }
  }

  @keyframes blob3 {
    0%,
    100% {
      border-radius: 50% 50% 30% 70% / 60% 40% 60% 40%;
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    33% {
      border-radius: 40% 60% 70% 30% / 50% 60% 30% 60%;
      transform: translate(5%, -5%) rotate(120deg) scale(1.1);
    }
    66% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
      transform: translate(-5%, 5%) rotate(240deg) scale(0.9);
    }
  }

  .animate-blob1 {
    animation: blob1 20s ease-in-out infinite;
  }

  .animate-blob2 {
    animation: blob2 20s ease-in-out infinite;
    animation-delay: -5s;
  }

  .animate-blob3 {
    animation: blob3 20s ease-in-out infinite;
    animation-delay: -10s;
  }

  .skill-hex-container {
    width: 120px;
    height: 140px;
    position: relative;
    margin: 5px;
  }

  .skill-hex {
    position: absolute;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transition: transform 0.5s ease-in-out;
  }

  .skill-hex:hover {
    transform: rotateY(180deg);
  }

  .skill-content {
    position: absolute;
    width: 100%;
    height: 100%;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    background: linear-gradient(135deg, #4f46e5 0%, #3b82f6 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    backface-visibility: hidden;
  }

  .skill-hex:hover .skill-content {
    background: linear-gradient(135deg, #3b82f6 0%, #4f46e5 100%);
  }

  .skill-text {
    color: white;
    font-weight: 600;
    font-size: 0.9rem;
    text-align: center;
    padding: 1rem;
    transform: scale(1);
    transition: transform 0.3s ease;
  }

  .skill-hex:hover .skill-text {
    transform: scale(1.1);
  }

  @media (max-width: 640px) {
    .skill-hex-container {
      width: 100px;
      height: 115px;
    }

    .skill-text {
      font-size: 0.8rem;
    }
  }
</style>
