---
import MainLayout from "../layouts/MainLayout.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const skills = [
  {
    category: t("about.skills.frontend"),
    technologies: ["React", "Vue.js", "TypeScript", "Tailwind CSS", "HTML/CSS"],
  },
  {
    category: t("about.skills.backend"),
    technologies: ["Node.js", "Python", "Express", "PostgreSQL", "MongoDB"],
  },
  {
    category: t("about.skills.tools"),
    technologies: ["Git", "Docker", "AWS", "Agile Methodology", "CI/CD"],
  },
];

const stats = [
  { number: "11+", label: t("about.stats.experience") },
  { number: "30+", label: t("about.stats.clients") },
  { number: "100%", label: t("about.stats.success") },
];
---

<MainLayout title={t("about.hero.title")} lang={lang}>
  <!-- Hero Section -->
  <section class="relative custom-gradient text-white py-20">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <!-- Text Content -->
        <div class="w-full md:w-1/2 space-y-6">
          <h1 class="text-5xl font-bold">{t("about.hero.title")}</h1>
          <p class="text-xl text-blue-100">{t("about.hero.subtitle")}</p>
        </div>

        <!-- Decorative Element -->
        <div class="w-full md:w-1/2">
          <div class="relative w-64 h-64 mx-auto">
            <!-- Animated background shapes -->
            <div
              class="absolute inset-0 bg-blue-500/30 rounded-full blur-3xl animate-pulse"
            >
            </div>
            <div
              class="absolute inset-0 bg-purple-500/20 rounded-full blur-3xl animate-pulse delay-700 translate-x-4"
            >
            </div>
            <div
              class="absolute inset-0 bg-indigo-500/20 rounded-full blur-3xl animate-pulse delay-1000 -translate-x-4"
            >
            </div>

            <!-- Organic shapes -->
            <div
              class="relative w-full h-full flex items-center justify-center"
            >
              <!-- Blob shape 1 -->
              <div
                class="absolute w-48 h-48 bg-gradient-to-br from-blue-400/40 to-purple-400/40 rounded-[60%_40%_30%_70%/60%_30%_70%_40%] animate-blob1"
              >
              </div>
              <!-- Blob shape 2 -->
              <div
                class="absolute w-48 h-48 bg-gradient-to-br from-indigo-400/40 to-blue-400/40 rounded-[40%_60%_70%_30%/50%_60%_30%_60%] animate-blob2"
              >
              </div>
              <!-- Blob shape 3 -->
              <div
                class="absolute w-48 h-48 bg-gradient-to-br from-purple-400/40 to-indigo-400/40 rounded-[50%_50%_30%_70%/60%_40%_60%_40%] animate-blob3"
              >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="py-20 px-4 bg-white">
    <div class="container mx-auto">
      <h2 class="text-4xl font-bold text-center mb-16">
        {t("about.skills.title")}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          skills.map((skill) => (
            <div class="bg-gray-50 p-8 rounded-xl hover:shadow-lg transition-all duration-300">
              <h3 class="text-2xl font-bold mb-4">{skill.category}</h3>
              <div class="flex flex-wrap gap-2">
                {skill.technologies.map((tech) => (
                  <span class="bg-blue-50 text-blue-600 px-4 py-2 rounded-full text-sm font-medium">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20 bg-blue-600 text-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          stats.map((stat) => (
            <div class="bg-white/10 rounded-lg p-8 text-center backdrop-blur-lg hover:bg-white/20 transition-all duration-300">
              <div class="text-4xl font-bold mb-2">{stat.number}</div>
              <div class="text-blue-100">{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold mb-6">{t("about.cta.title")}</h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        {t("about.cta.subtitle")}
      </p>
      <a
        href="/contact"
        class="bg-blue-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-blue-700 transition-all duration-300 inline-block"
      >
        {t("about.cta.button")}
      </a>
    </div>
  </section>
</MainLayout>
