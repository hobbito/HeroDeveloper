---
import MainLayout from '../layouts/MainLayout.astro';
import ContactModal from '../components/ContactModal.astro';
---

<MainLayout title="Professional Programming Services">
  <!-- Hero Section -->
  <section class="relative custom-gradient text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl">
        <h1 class="text-5xl font-bold mb-6">Transform Your Ideas Into Reality</h1>
        <p class="text-xl text-blue-100 mb-8">Professional software development services for businesses and startups</p>
        <button 
          id="openModal"
          class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors">
          Get Started
        </button>
      </div>
    </div>
  </section>

  <ContactModal id="contactModal" />

  <!-- Services Section -->
  <section class="bg-white py-16 px-4">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">Our Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="p-6 bg-gray-50 rounded-lg">
          <div class="text-blue-500 mb-4">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Custom Software Development</h3>
          <p class="text-gray-600">Tailored solutions designed to meet your specific business needs and challenges.</p>
        </div>
        <div class="p-6 bg-gray-50 rounded-lg">
          <div class="text-blue-500 mb-4">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Mobile App Development</h3>
          <p class="text-gray-600">Native and cross-platform mobile applications for iOS and Android.</p>
        </div>
        <div class="p-6 bg-gray-50 rounded-lg">
          <div class="text-blue-500 mb-4">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Web Development</h3>
          <p class="text-gray-600">Modern, responsive websites and web applications built with cutting-edge technologies.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="bg-gray-50 py-16 px-4">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">Why Choose Us</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-blue-500 mb-4 flex justify-center">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Fast Delivery</h3>
          <p class="text-gray-600">Quick turnaround times without compromising quality</p>
        </div>
        <div class="text-center">
          <div class="text-blue-500 mb-4 flex justify-center">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Secure Code</h3>
          <p class="text-gray-600">Security-first approach in all our solutions</p>
        </div>
        <div class="text-center">
          <div class="text-blue-500 mb-4 flex justify-center">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">24/7 Support</h3>
          <p class="text-gray-600">Round-the-clock technical support</p>
        </div>
        <div class="text-center">
          <div class="text-blue-500 mb-4 flex justify-center">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Competitive Pricing</h3>
          <p class="text-gray-600">Best value for your investment</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-blue-600 text-white py-16 px-4">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6">Ready to Start Your Project?</h2>
      <p class="text-xl mb-8">Let's discuss your requirements and create something amazing together.</p>
      <a href="/contact" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold inline-block hover:bg-gray-100 transition-colors">
        Contact Us
      </a>
    </div>
  </section>
</MainLayout>

<script>
  // Modal open functionality
  const modal = document.getElementById('contactModal');
  const openButton = document.getElementById('openModal');

  function openModal() {
    modal?.classList.remove('hidden');
    modal?.classList.add('flex');
    document.body.style.overflow = 'hidden';
  }

  openButton?.addEventListener('click', openModal);
</script>